

<h1>Membresías</h1>


<div class="btn-group" role="group" aria-label="...">
  <%= link_to "<i class='fa fa-plus-circle'></i> Nueva Membresía".html_safe,
              new_society_path, class: 'btn btn-primary btn-lg'%>



</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Cuota anual</th>

      <th>Couta mensual</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @societies.each do |society| %>
      <tr>
        <td><%= society.nombre %></td>
        <td><%= society.descripcio %></td>
        <td><%= society.valor_anual %></td>

        <td><%= society.valor_mensual %></td>
        <td><%= link_to 'Ver', society %></td>
        <td><%= link_to 'Editar', edit_society_path(society) %></td>
        <td><%= link_to 'Eliminar', society, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>




