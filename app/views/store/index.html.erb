
<h1>Productos y Cursos</h1>
<%= render 'products/lookup' %>


 <table>
         <td width="950">
        <table class = "table table-hover" >
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
            <th>Valor unitario</th>
          </tr>
          </thead>
          <tbody>
          <% @products.each do |product|%>
