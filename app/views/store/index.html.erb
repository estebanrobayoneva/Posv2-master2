          <td><%= product.cantidad %></td>
          <td><div class="price_line">
        <span class="price"><%= number_to_currency(product.valor_unitario)%></span>
            <%= button_to 'AÃ±adir a carrito', line_items_path(product_id: product)%>
            </div>
          </td>
            </tr>
        <% end %>
           </tbody>
           <% end %>
        </table>
         </td>
    </table>




  <td colspan="2">
    <table class = "table-hover" width="350" >
      <td ><div id="cart"><%= render @cart %> </div></td>
    </table>
  </td>
</table>



